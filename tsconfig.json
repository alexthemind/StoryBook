{
    "files": ["src/index.ts"],
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "definitions",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true,
        "downlevelIteration": true,
        "importHelpers": true
    },
    "include": [
        "src/index.ts",
        "public/*"
    ],
    "exclude": [
        "node_modules",
        "definitions"
    ]
}